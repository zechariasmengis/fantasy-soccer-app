<br><h1 class="text-center" > <%= @user.name + "'s Home Page" %> </h1><br>

<% if @user.team %>
    <h3 class="text-center"> My Dream Team: <%= link_to @user.team.name, team_path(@user.team) %> </h3>
<% else %>
    <p class="text-center"> You have not created your dream team yet! <%= link_to "Create your team now", new_team_path %> </p>
<% end %><br>



<div class="card mx-auto shadow p-3 mb-5" style="width: 36rem;">
  <div class="card-body">
    <h4 class="card-title text-center">About <%= @user.name %> </h4>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"> Favorite Club: <%= @user.favorite_club %> </li>
        <li class="list-group-item"> Email: <%= @user.email%> </li>
    </ul>
  </div>
</div>

<p class="text-center"> <%= link_to "Update your profile", edit_user_path(@user) %> </p>